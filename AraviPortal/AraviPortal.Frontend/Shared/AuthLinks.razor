<AuthorizeView>
    <Authorized>
        <MudContainer Style="width: 18rem; margin-top: 2rem; margin-bottom: 2rem;">
            <MudText Typo="Typo.body1" Align="Align.Center">@Localizer["Hello"], @FullName</MudText>
            <MudPaper Elevation="1" Class="d-flex justify-content-center align-content-center">
                <MudStack Spacing="2">
                    <MudButton Variant="Variant.Text" OnClick="EditAction">@Localizer["EditUserProfile"] <MudIcon Icon="@Icons.Material.Filled.Person" /> </MudButton>
                    <MudButton Variant="Variant.Text" OnClick="ShowModalLogOut">@Localizer["Logout"] <MudIcon Icon="@Icons.Material.Filled.Login" /> </MudButton>
                </MudStack>
            </MudPaper>
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        <MudContainer Style="width: 18rem; margin-top: 2rem; margin-bottom: 2rem;">
            <MudStack Spacing="2">
                <a href="/register" class="nav-link btn btn-link">@Localizer["Register"] <MudIcon Icon="@Icons.Material.Filled.HowToReg" /></a>
                <MudMenuItem OnClick="ShowModalLogIn">@Localizer["Login"] <MudIcon Icon="@Icons.Material.Filled.Login" /> </MudMenuItem>
            </MudStack>
        </MudContainer>
    </NotAuthorized>
</AuthorizeView>