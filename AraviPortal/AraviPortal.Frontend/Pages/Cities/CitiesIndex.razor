@page "/cities"

<PageTitle>@Localizer["Cities"]</PageTitle>

<h3>@Localizer["Cities"]</h3>

@if (Cities is null)
{
    <p>Cargando...</p>
}
else
{
    <div class="mb-3">
        <a class="btn btn-primary" href="/cities/create">@Localizer["New2"] @Localizer["City"]</a>
    </div>

    <GenericList MyList="Cities">
        <Body>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Localizer["City"]</th>
                        <th># @Localizer["Hangars"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Cities!)
                    {
                        <tr>
                            <td>@city.Name</td>
                            <td>@city.HangarsCount</td>
                            <td>
                                <a class="btn btn-warning" href="/cities/edit/@city.Id">@Localizer["Edit"]</a>
                                <button class="btn btn-danger" @onclick=@(() => DeleteAsync(city))>@Localizer["Delete"]</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </Body>
    </GenericList>

}