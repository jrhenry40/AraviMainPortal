@page "/categories"

<h3>@Localizer["Categories"]</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/categories/create">@Localizer["New2"] @Localizer["Category"]</a>
</div>

<GenericList MyList="Categories">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>@Localizer["Category"]</td>
                    <td>@Localizer["Description"]</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories!)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <a class="btn btn-warning">@Localizer["Edit"]</a>
                            <button class="btn btn-danger">@Localizer["Delete"]</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>





